# S3 Spec Generator - Development Environment Configuration
# Copy this file to .env.dev and fill in the values

# AWS Configuration
AWS_REGION=eu-west-2
AWS_PROFILE=sandbox
CDK_DEFAULT_ACCOUNT=
CDK_DEFAULT_REGION=eu-west-2

# Environment Settings
ENVIRONMENT=dev
NOTIFICATION_EMAIL=matt.e.lewis@gmail.com

# Resource Configuration
INPUT_BUCKET_NAME=spec-generator-input-dev
OUTPUT_BUCKET_NAME=spec-generator-output-dev
NOTIFICATION_TOPIC_NAME=spec-generator-notifications-dev
STEP_FUNCTION_NAME=spec-generator-workflow-dev

# Lambda Configuration
LAMBDA_TIMEOUT=300
READ_FILE_MEMORY=512
PROCESS_CLAUDE_MEMORY=1024
WRITE_SPEC_MEMORY=256
SEND_NOTIFICATION_MEMORY=256

# Application Settings
MAX_FILE_SIZE=10485760
FILE_RETENTION_DAYS=7
CLAUDE_MODEL=anthropic.claude-3-5-sonnet-20250219-v1:0

# Monitoring and Logging
ENABLE_XRAY_TRACING=false
LOG_RETENTION_DAYS=3
LOG_LEVEL=DEBUG
ENABLE_DETAILED_LOGGING=false

# Security Settings
ENABLE_TERMINATION_PROTECTION=false
REQUIRE_APPROVAL=false
ENABLE_ROLLBACK=false

# Optional Integrations
SLACK_WEBHOOK_URL=
CLAUDE_API_KEY=

# Resource Tags
RESOURCE_OWNER=DevTeam
COST_CENTER=Engineering
PROJECT=S3SpecGenerator