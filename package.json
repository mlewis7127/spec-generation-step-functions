{
  "name": "s3-spec-generator",
  "version": "1.0.0",
  "description": "Automated document processing system that transforms uploaded files into structured specification documents using AI",
  "main": "index.js",
  "scripts": {
    "build": "tsc && ./scripts/build-lambdas.sh",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "deploy:dev": "./scripts/deploy.sh -e dev",
    "deploy:staging": "./scripts/deploy.sh -e staging",
    "deploy:prod": "./scripts/deploy.sh -e prod",
    "validate:dev": "./scripts/validate-deployment.sh -e dev",
    "validate:staging": "./scripts/validate-deployment.sh -e staging",
    "validate:prod": "./scripts/validate-deployment.sh -e prod",
    "config:show": "./scripts/manage-config.sh show",
    "config:validate": "./scripts/manage-config.sh validate",
    "config:tags": "./scripts/manage-config.sh generate-tags",
    "secrets:list": "./scripts/manage-secrets.sh list",
    "secrets:create": "./scripts/manage-secrets.sh create-defaults",
    "secrets:validate": "./scripts/manage-secrets.sh validate",
    "validate:config": "./scripts/validate-config.sh",
    "validate:config:strict": "./scripts/validate-config.sh --strict",
    "upload": "./scripts/upload-file.sh",
    "download": "./scripts/download-specification.sh",
    "list-specs": "./scripts/download-specification.sh --list",
    "test-workflow": "./scripts/test-workflow.sh"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "aws-cdk": "^2.108.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.108.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1490.0",
    "@aws-sdk/client-bedrock-runtime": "^3.450.0",
    "constructs": "^10.3.0"
  }
}