# S3 Spec Generator - Staging Environment Configuration
# Copy this file to .env.staging and fill in the values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=staging
CDK_DEFAULT_ACCOUNT=
CDK_DEFAULT_REGION=us-east-1

# Environment Settings
ENVIRONMENT=staging
NOTIFICATION_EMAIL=

# Resource Configuration
INPUT_BUCKET_NAME=spec-generator-input-staging
OUTPUT_BUCKET_NAME=spec-generator-output-staging
NOTIFICATION_TOPIC_NAME=spec-generator-notifications-staging
STEP_FUNCTION_NAME=spec-generator-workflow-staging

# Lambda Configuration
LAMBDA_TIMEOUT=300
READ_FILE_MEMORY=768
PROCESS_CLAUDE_MEMORY=1536
WRITE_SPEC_MEMORY=384
SEND_NOTIFICATION_MEMORY=384

# Application Settings
MAX_FILE_SIZE=10485760
FILE_RETENTION_DAYS=14
CLAUDE_MODEL=anthropic.claude-3-5-sonnet-20250219-v1:0

# Monitoring and Logging
ENABLE_XRAY_TRACING=true
LOG_RETENTION_DAYS=14
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=true

# Security Settings
ENABLE_TERMINATION_PROTECTION=false
REQUIRE_APPROVAL=false
ENABLE_ROLLBACK=true

# Optional Integrations
SLACK_WEBHOOK_URL=
CLAUDE_API_KEY=

# Resource Tags
RESOURCE_OWNER=DevTeam
COST_CENTER=Engineering
PROJECT=S3SpecGenerator