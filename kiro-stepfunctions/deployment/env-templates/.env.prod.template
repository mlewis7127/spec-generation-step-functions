# S3 Spec Generator - Production Environment Configuration
# Copy this file to .env.prod and fill in the values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=production
CDK_DEFAULT_ACCOUNT=
CDK_DEFAULT_REGION=us-east-1

# Environment Settings
ENVIRONMENT=prod
NOTIFICATION_EMAIL=

# Resource Configuration
INPUT_BUCKET_NAME=spec-generator-input-prod
OUTPUT_BUCKET_NAME=spec-generator-output-prod
NOTIFICATION_TOPIC_NAME=spec-generator-notifications-prod
STEP_FUNCTION_NAME=spec-generator-workflow-prod

# Lambda Configuration
LAMBDA_TIMEOUT=300
READ_FILE_MEMORY=1024
PROCESS_CLAUDE_MEMORY=2048
WRITE_SPEC_MEMORY=512
SEND_NOTIFICATION_MEMORY=512

# Application Settings
MAX_FILE_SIZE=10485760
FILE_RETENTION_DAYS=30
CLAUDE_MODEL=anthropic.claude-3-5-sonnet-20250219-v1:0

# Monitoring and Logging
ENABLE_XRAY_TRACING=true
LOG_RETENTION_DAYS=90
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=true

# Security Settings
ENABLE_TERMINATION_PROTECTION=true
REQUIRE_APPROVAL=true
ENABLE_ROLLBACK=true

# Optional Integrations
SLACK_WEBHOOK_URL=
CLAUDE_API_KEY=

# Resource Tags
RESOURCE_OWNER=ProductionTeam
COST_CENTER=Operations
PROJECT=S3SpecGenerator